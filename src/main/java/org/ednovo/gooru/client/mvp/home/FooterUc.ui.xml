<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.ednovo.gooru.client.GooruCBundle" field="res" />
	<ui:style>
		.connectUs {
			margin: 0 auto;
		}

		table.connectUs td {
			vertical-align: middle !important;
			width: 105px;
		}

		.learnMoreIconsDiv div{
			margin-top: 10px;
		}

		div.learnMoreIconsDiv div.socialTextConnectUs, div.learnMoreIconsDiv div.socialBlogImages{
			margin-top: 8px;
			display:inline-block
		}

		.socialBlogImages {
		}

		.socialBlogImages a span {
			float: left;
			margin-left: 8px;
		}

		.learnMoreIcon {
			background: url("images/social-imgs.png") repeat scroll 0 0 transparent;
			height: 21px;
			margin-bottom: 0;
			margin-left:auto;
			margin-right: auto;
			position: relative;
			top: 6px;
			width: 266px;
		}

		.learnMoreIconBoder {
			border-bottom: 1px solid #444444;
			clear: both;
			height: 2px;
			margin-bottom: 0;
			margin-left: auto;
			margin-right: auto;
			position: relative;
			top: 3px;
			width: 399px;
		}

		.innerFooterDiv {
			
		}

		.socialBlogImages a {
			background-repeat:no-repeat;
		}

		.socialBlogImages a:hover {
			opacity: 0.6;
		}

		.learnMoreIconsDiv {
			width: 100%;
		}

		.connectWithUS {
			color: #D4D4D4;
			float: left;
			font-size: 13px;
		}
	</ui:style>
	<g:FlowPanel styleName="{res.css.goorulandingFooterContainer}"
		ui:field="goorulandingFooterContainer">
		<g:FlowPanel styleName="{style.innerFooterDiv}" ui:field="innerFooterDiv">
			<g:HTMLPanel styleName="{style.innerFooterDiv}">
				<g:FlowPanel styleName="{style.learnMoreIconsDiv}">
					<g:HTML styleName="{style.socialBlogImages}">
						<a href="https://www.facebook.com/gooru" target="_blank">
							<span class="{res.css.facebookImage}"></span>
						</a>
						<a href="https://www.twitter.com/gooru" target="_blank">
							<span class="{res.css.twitterImage}"></span>
						</a>
						<a href="https://www.youtube.com/gooru" target="_blank">
							<span class="{res.css.youtubeImage}"></span>
						</a>
						<a href="https://plus.google.com/u/0/105874563188592272186/posts"
							target="_blank">
							<span class="{res.css.googleplusImage}"></span>
						</a>
						<!--  <a href="http://pinterest.com/goorulearning/" target="_blank">
							<span class="{res.css.pinterestImage}"></span>
						</a>-->
					</g:HTML>
				</g:FlowPanel>
				<g:HTMLPanel styleName="{res.css.homePageFooterMenu}">
					<g:Anchor ui:field="aboutGooruAnr"/>
					<!-- <g:Anchor text="Features" ui:field="featuresAnr" /> -->
					<g:Anchor ui:field="communityAnr"/>
					<g:Anchor ui:field="supportAnr"/>
					<g:Anchor ui:field="termsAndPolicyAnr"/>
					<!--Add-->
					<g:Anchor ui:field="privacyAndPolicyAnr"/>
					
					<g:Anchor ui:field="copyRightAnr"/>
					<g:Anchor ui:field="careersAnr"/>
					<g:Anchor ui:field="contactUsAnr"/>
					<g:SimplePanel styleName="{res.css.gooruCopyRight}">
						<g:Label ui:field="copyRightYearText"/>
					</g:SimplePanel>
				</g:HTMLPanel>
				<!-- <div style="width: 114px;height: 36px;overflow: hidden;display: inline-block;margin-top: 10px;">
				    <g:Anchor ui:field="mixpanelLink">
					<a href="https://mixpanel.com/f/partner" ui:filed="mixpanelLink">
						<img src="//cdn.mxpnl.com/site_media/images/partner/badge_light.png"
							alt="Mobile Analytics"/>
					</a>
					</g:Anchor>
				</div> -->
			</g:HTMLPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 