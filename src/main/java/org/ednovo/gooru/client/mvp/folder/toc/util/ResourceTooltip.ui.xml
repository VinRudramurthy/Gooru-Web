<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.pnlToolTipContainer{
			background: white;
			border: 1px solid #ddd;
			width: 80%;
			-moz-box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
			-webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
			padding: 10px;
			line-height: 1.4em;
			white-space: normal;
			border-radius: 4px;
			z-index: 0;
			top: -3px;
			position: relative;
		}
		.header {
			background: url("images/Collection-Search/standards-arrow.png");
			display: block;
			width: 30px;
			height: 15px;
			position: relative;
			margin: 0 auto;
			z-index: 999;
		}
	</ui:style>
	<g:HTMLPanel>
		<!-- <g:SimplePanel styleName="{style.header}" /> -->
		<g:HTMLPanel styleName="{style.pnlToolTipContainer}" ui:field="pnlToolTipContainer">
		    <g:Label ui:field="lblResourceDesc"></g:Label>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 